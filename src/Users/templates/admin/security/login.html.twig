{% extends '@Core/admin/layouts/base.html.twig' %}

{% block title %}{{ 'users.authorization_required' | trans }}{% endblock %}
{% block body_class %}flex-row align-items-center{% endblock %}

{% block content %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-sm-8 col-md-6 col-lg-5">
                <div class="card-group">
                    <div class="card p-4">
                        <div class="card-body">
                            <h1>{{ 'users.authorization' | trans }}</h1>
                            <p class="text-muted">{{ 'users.auth_admin_panel' | trans }}.</p>
                            {% if error %}
                                <div class="alert alert-danger">{{ error.messageKey | trans(error.messageData, 'security') }}</div>
                            {% endif %}
                            <form method="post" action="{{ path('admin.login') }}">
                                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <svg class="c-icon">
                                                <use xlink:href="{{ asset('bundles/core/admin/vendors/@coreui/icons/svg/free.svg#cil-envelope-closed') }}"></use>
                                            </svg>
                                        </span>
                                    </div>
                                    <input class="form-control {% if error %}is-invalid{% endif %}"
                                       type="email"
                                       placeholder="{{ 'users.email' | trans }}"
                                       value="{{ last_username }}"
                                       name="_username"
                                       required
                                       autofocus
                                    >
                                </div>
                                <div class="input-group mb-4">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <svg class="c-icon">
                                                <use xlink:href="{{ asset('bundles/core/admin/vendors/@coreui/icons/svg/free.svg#cil-lock-locked') }}"></use>
                                            </svg>
                                        </span>
                                    </div>
                                    <input class="form-control {% if error %}is-invalid{% endif %}"
                                       type="password"
                                       name="_password"
                                       placeholder="{{ 'users.password' | trans }}"
                                       required
                                    >
                                </div>
                                <div class="row">
                                    <div class="col-6">
                                        <button class="btn btn-primary px-4" type="submit">{{ 'users.auth_enter' | trans }}</button>
                                    </div>
                                    <!--<div class="col-6 text-right">
                                        <button class="btn btn-link px-0" type="button">Forgot password?</button>
                                    </div>-->
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
